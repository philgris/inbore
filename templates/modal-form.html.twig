{% form_theme form 'Form/form-theme.html.twig' %}
{% if entity is defined %}
    {% set route_newmodal = 'admin_newmodal' %}
    {% set args = { 'entity':entity, 'choice_label': choice_label } %}
{% else %}
    {% set route_newmodal = entityname ~ '_newmodal' %}
    {% set args = { 'choice_label': choice_label } %}
{% endif %}

{% if  app.request.attributes.get('choice_label') is defined %}
    {% set choice_label = app.request.attributes.get('choice_label') %}
{% endif %} 

{#{{ form_start(form,{action: path(route_newmodal, { 'choice_label': choice_label }) }) }}#}
{{ form_start(form,{action: path(route_newmodal, args) }) }}
{{ form_rest(form) }}

<div class="form-group row">
    <div class="offset-lg-2 col-sm-3">
        <button type="submit" class="btn btn-success form-control" value="Create">
            Valider
        </button>
    </div>
    <i class="text-right form-status fas fa-3x">
        {# <i class="fas fa-spin fa-spinner fa-3x d-none"></i>
        <i class="fas fa-check-circle fa-3x d-none"></i> #}
    </i>
</div>
<div class="errors text-danger offset-md-2">
    {{ form_errors(form) }}
</div>
{{ form_end(form) }}
