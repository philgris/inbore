{% extends 'base.html.twig' %}

{# DASHBOARD #}

{% block headincl %}{% endblock %}

{% block stylesheets %}
	{{ parent() }} 
	{{ encore_entry_link_tags('dashboard') }} 
{% endblock %}

{% block page_title %}
	<h1>{{app_name}} </h1>
{% endblock %}

{% block body %}


    <div class="row">

        <div class="col-md-4 col-sm-4 col-xs-12">

            <div class="x_panel">
                        <div class="x_title">
                                <h2>{{'Dashboard.tools'|trans}}</h2>
                                <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                                <div class="dashboard-widget-content">

                                        {% if is_granted('ROLE_ADMIN') %}
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href=" {{ path('gps_import') }} ">{{'import.gps'|trans}}</a><br/>
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href=" {{ path('gps_batch') }} ">{{'batch.gps'|trans}}</a><br/>
                                        {% elseif  is_granted('ROLE_PROJECT')%}
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href=" {{ path('gps_import') }} ">{{'import.gps'|trans}}</a><br/>
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href=" {{ path('gps_batch') }} ">{{'batch.gps'|trans}}</a><br/>
                                        {% elseif  is_granted('ROLE_COLLABORATION')%}
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href=" {{ path('gps_import') }} ">{{'import.gps'|trans}}</a><br/>
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href="#"><font color="grey">{{'batch.gps'|trans}}</font></a><br/>
                                        {% elseif  is_granted('ROLE_INVITED')%}
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href="#"><font color="grey">{{'import..gps'|trans}}</font></a><br/>
                                                <i class="far fa-arrow-alt-circle-right"></i>
                                                <a href="#"><font color="grey">{{'batch.gps'|trans}}</font></a><br/>
                                                {% else  %}

                                        {% endif %}

                                </div>
                        </div>
                </div>
                                        
            <div class="x_panel tile fixed_height_200">
                <div class="x_title">
                        <h2>{{'Dashboard.queryTools'|trans}} </h2>

                        <div class="clearfix"></div>
                </div>
                <div class="x_content">
                        <div class="widget_summary">
                                <div class="w_left w_55">
                                        <span>{# {{'Dashboard.nbStation'|trans}} #}</span>
                                </div>
                                <div class="w_center w_25"></div>
                                <div class="w_right w_20">
                                        <span>{# {{ nbStation }} #}</span>
                                </div>
                                <div class="clearfix"></div>
                        </div>
                        <div class="widget_summary">
                                <div class="w_left w_55">
                                        <span>{# {{'Dashboard.nbCollecte'|trans}} #}</span>
                                </div>
                                <div class="w_center w_25"></div>
                                <div class="w_right w_20">
                                        <span>{# {{ nbCollecte }} #}</span>
                                </div>
                                <div class="clearfix"></div>
                        </div>

                </div>
            </div>
                                
        </div>

        <div class="col-md-8 col-sm-8 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{'Dashboard.siteName'|trans}}</h2>
                    <div class="clearfix"></div>
                </div>
                <div id="sites" class="x_content">
                    <div class="table-responsive">
                        <table  id="list-sites" class="table table-condensed table-hover table-striped">
                            <thead>
                                <tr>
                                    <th data-column-id="siteName">{{'list.dashboard.siteName'|trans}}</th>
                                    <th data-column-id="country">{{'list.dashboard.country'|trans}}</th>
                                    <th data-column-id="region">{{'list.dashboard.region'|trans}}</th>
                                    <th data-column-id="link_working_day" data-visible="true" title="{{'list.link_working_day.title'|trans}}">{{'list.link_working_day'|trans}}</th>
                                    <th data-column-id="link_transect" data-visible="true" title="{{'list.link_transect.title'|trans}}">{{'list.link_transect'|trans}}</th>
                                    <th data-column-id="link_pheno_tree" data-visible="true" title="{{'list.link_pheno_tree.title'|trans}}">{{'list.link_pheno_tree'|trans}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for site in sites %}
                                    <tr>
                                        <td>{{site.siteName}} </td>
                                        <td>{{site.country}} </td>
                                        <td>{{site.region }} </td>
                                        <td><a href="{{path('working_day_index')}}?nameFk=coreSiteFk&idFk={{site.link_working_day}}" class="btn btn-sm" ><span class="fas fa-list"></span></a></td>
                                        <td><a href="{{path('transect_index')}}?nameFk=coreSiteFk&idFk={{site.link_transect}}" class="btn btn-sm" ><span class="fas fa-list"></span></a></td>
                                        <td></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-4 col-sm-4 col-xs-12">
            {# {{dump(infos)}} #}
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{'Dashboard.behaviorStudy'|trans}}</h2>
                    <div class="clearfix"></div>
                </div>
                <div id="sites" class="x_content">
                    <div class="table-responsive">
                        <table  id="list-sites" class="table table-condensed table-hover table-striped">
                            <thead>
                                <tr>
                                    <th data-column-id="site">{{'list.dashboard.siteName'|trans}}</th>
                                    <th data-column-id="code">{{'list.dashboard.codeProtocol'|trans}}</th>
                                    <th data-column-id="nb">{{'list.dashboard.numberBehaviorStudy'|trans}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for info in infos %}
                                    <tr>
                                        <td>{{info.site}}</td>
                                        <td>{{info.code}}</td>
                                        <td>{{info.nb}}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
                            


        </div>

        <div class="col-md-8 col-sm-8 col-xs-12">
                <div class="x_panel">
                        <div class="x_title">
                                <h2>{{'Dashboard.lastUpdate'|trans}}</h2>
                                <div class="clearfix"></div>
                        </div>
                        <div id="stations" class="x_content">
                                <div class="table-responsive">
                                        <table id="last-updates-table" class="table table-condensed table-hover table-striped">
                                                <thead>
                                                    <tr>
                                                            <th data-column-id="id" data-type="numeric" data-visible="false">Id</th>
                                                            <th data-column-id="dbName" data-visible="false">DB Table</th>
                                                            <th data-column-id="name">Table</th>
                                                            <th data-column-id="type_study">{{'list.dashboard.type_study'|trans}} </th>
                                                            <th data-column-id="site">Site</th>
                                                            <th data-column-id="code">Code protocol</th>
                                                            <th data-column-id="dateMaj" data-type="date" data-sortable="true">{{'list.date_maj'|trans}} </th>
                                                            <th data-column-id="userMaj">{{'list.user_maj'|trans}} </th>
                                                            <th data-column-id="showEntity" data-formatter="showEntity" data-sortable="false" data-visible="true">Show</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for entity in entities %}
                                                            <tr>
                                                                    <td>{{entity.id}}</td>
                                                                    <td>{{entity.name}}</td>
                                                                    <td>{{('core.' ~ entity.name)|trans(domain="sections")|capitalize}}</td>
                                                                    <td>{{entity.type_study }}</td>
                                                                    <td>{{entity.site }}</td>
                                                                    <td>{{entity.code }}</td>
                                                                    <td>{{entity.dateMaj}}</td>
                                                                    <td>{{entity.userMaj}}</td>
                                                                    <td></td>
                                                            </tr>

                                                    {% endfor %}
                                                </tbody>
                                        </table>
                                </div>
                        </div>
                </div>
        </div>

    </div>
                                                        
{% endblock %}
{% block scripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('dashboard') }}
{% endblock %}
